# Configuration du logging
LOG_LEVEL=INFO

# Configuration de la base de données
DATABASE_URL=sqlite:///./data.db

# Configuration du stockage
STORAGE_TYPE=local  # ou 'azure' pour Azure Data Lake Gen2

# Configuration Azure (nécessaire si STORAGE_TYPE=azure)
AZURE_STORAGE_ACCOUNT=your_storage_account
AZURE_STORAGE_KEY=your_storage_key
AZURE_CONTAINER=your_container
AZURE_DIRECTORY=bofip

# Configuration BOFIP API
BOFIP_API_URL=https://data.economie.gouv.fr/api/records/1.0/search/?dataset=bofip-impots
BOFIP_API_LIMIT=20

# Configuration API
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

