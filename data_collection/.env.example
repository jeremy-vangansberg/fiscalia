# Configuration du logging
LOG_LEVEL=INFO

# Configuration de la base de données MySQL
# Pour une première installation, utilisez ces paramètres par défaut
# Le script d'initialisation configurera automatiquement l'utilisateur
DB_HOST=localhost
DB_PORT=3306
DB_NAME=bofip
DB_USER=bofip_user
DB_PASSWORD=bofip_password
DB_ECHO=false

# Configuration du stockage
STORAGE_TYPE=local

# Configuration Azure (optionnel)
AZURE_STORAGE_ACCOUNT=
AZURE_STORAGE_KEY=
AZURE_CONTAINER=
AZURE_DIRECTORY=bofip

# Configuration BOFIP API
BOFIP_API_URL=https://data.economie.gouv.fr/api/explore/v2.1/catalog/datasets/bofip-impots/records
BOFIP_API_LIMIT=20
BOFIP_DOCUMENTATION_URL=https://data.economie.gouv.fr/api/datasets/1.0/bofip-impots/attachments/bofip_documentation_pdf/
BOFIP_DOCUMENTATION_FILENAME=bofip_documentation.pdf

# Configuration API
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

